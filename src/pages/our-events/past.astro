---
import { Container } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import { formatEventDate, formatEventTime, getPastEvents } from '../../utils/events';

const pastEvents = getPastEvents(200);
---

<Layout
	seo={{
		title: 'Past events | AI4Science Club Zurich',
		description: 'Past events and recaps from AI4Science Club Zurich.',
	}}
>
	<Container>
		<section class="events-page">
			<h1>Past events</h1>
			<p>Browse previous sessions and linked event recaps.</p>
			<ul class="events-page__list">
				{
					pastEvents.map((event) => (
						<li>
							<a href={event.articleUrl}>
								<strong>{event.title}</strong>
								<span>{event.series}</span>
								<span>
									{formatEventDate(event.startDate)} â€¢ {formatEventTime(event.startDate)}
								</span>
								<span>{event.location}</span>
							</a>
						</li>
					))
				}
			</ul>
		</section>
	</Container>
</Layout>

<style>
	.events-page {
		margin: var(--section-margin) auto;
	}

	.events-page__list {
		margin: 1.5rem 0 0;
		padding: 0;
		list-style: none;
		display: grid;
		gap: 0.8rem;
	}

	.events-page__list li {
		background: var(--theme-surface-1);
		border-radius: calc(var(--theme-shape-radius) + 0.25rem);
	}

	.events-page__list li a {
		display: flex;
		flex-direction: column;
		text-decoration: none;
		padding: 0.95rem;
	}

	.events-page__list li a span {
		font-size: var(--font-size-sm);
		opacity: 0.8;
	}
</style>
